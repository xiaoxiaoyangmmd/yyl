.top {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid gainsboro;
}

.txt1 {
  margin-left: 20rpx;
  font-size: 30rpx;
  color: red;
}
.txt2 {
