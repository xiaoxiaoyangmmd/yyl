}

.photo1 {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.photo2 {
  width:600rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-left: 25rpx;
}

.head {
  width: 200rpx;
  height: 100rpx;
  float: left;
  margin-top: 10rpx;
}

.name {
  font-size: 25rpx;
