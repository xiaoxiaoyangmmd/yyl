  flex-direction: column;
  font-size: 20rpx;
  color: gray;
  width: 100%;
}

.icon {
  margin-left: 10rpx;
  width: 180rpx;
  height: 34rpx;
  border: 1rpx outset gainsboro;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 5rpx;
}

